<header>
  <div class="header-content">
    <div class="header-content-inner">
      <h1>Sign In</h1>  

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="panel translucent">
  <div class="panel-body">

  <div class="panel-text">  
  <% flash.each do |name, msg| %>
    <% if msg.class == Array %>
      <% msg.each do |message| %>
        <%= content_tag :div, message, :id => "flash_#{name}" %>
      <% end %>
    <% else %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %> 
  <% end %>  
  </div>
  
  <div class="form-inputs"> 
    <%= f.input :email, required: false, autofocus: true, input_html: { maxlength: 50, size: 25 }%>
    <%= f.input :password, required: false, input_html: { maxlength: 50, size: 25 } %>
    <%= f.input :remember_me, as: :boolean, input_html: { maxlength: 50, size: 25 } if devise_mapping.rememberable? %>
  </div>
  
  </div>
  </div>
  
  <button class="btn btn-primary btn-xl" type="submit">Sign In</button>
<% end %>
