<header>
  <div class="header-content">
    <div class="header-content-inner">
      <h1>Sign In</h1>  



<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="panel translucent">
  <div class="panel-body">  
  
  <div class="form-inputs"> 
    <%= f.input :email, required: false, autofocus: true, input_html: { maxlength: 50, size: 25 }%>
    <%= f.input :password, required: false, input_html: { maxlength: 50, size: 25 } %>
    <%= f.input :remember_me, as: :boolean, input_html: { maxlength: 50, size: 25 } if devise_mapping.rememberable? %>
  </div>
  
  </div>
  </div>
  
  <button class="btn btn-primary btn-xl" type="submit">Sign In</button>
<% end %>
      
<hr>
  <div class="panel translucent">
    <div class="panel-body"> 
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>    
</div>
</header>
