<header>
<div class="header-content">
<div class="header-content-inner">
<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <div class="panel translucent">
  <div class="panel-body"

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, input_html: { maxlength: 50, size: 25 } %>
    <%= f.input :name, reqiured: false, input_html: { maxlength: 50, size: 25 } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %> 

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, input_html: { maxlength: 50, size: 25 }%>
    <%= f.input :password_confirmation, required: false, input_html: { maxlength: 50, size: 25 } %>
    <br>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true,  input_html: { maxlength: 50, size: 25 } %>
  </div>

 </div>
</div>
<button class="btn btn-primary btn-xl" type="submit">Confirm</button>
<% end %>

<hr>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

</div>    
</div>
</header>
