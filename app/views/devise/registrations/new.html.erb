<header>
  <div class="header-content">
    <div class="header-content-inner">
      <h1>Sign Up</h1>  
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="panel translucent">
          <div class="panel-body">  
            <div class="panel-text">
            <%= f.error_notification %>
            </div>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true, input_html: { maxlength: 50, size: 25, value: @email}, hint: @email_error %>
              <%= f.input :name, required: true, input_html: { maxlength: 50, size: 25, value: (@name.blank? ? "" : @name) } %>
              <%= f.input :password, required: true, input_html: { maxlength: 50, size: 25 }, hint: @password_error %>
              <%= f.input :password_confirmation, required: true, input_html: { maxlength: 50, size: 25 }, hint: @password_confirmation_error %>
            </div>

          </div>
        
        </div>
        <button class="btn btn-primary btn-xl" type="submit">Sign Up</button>
      <% end %>
      <hr>
      <div class="panel translucent">
        <div class="panel-body"> 
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>    
  </div>
</header>