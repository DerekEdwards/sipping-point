<header>
<div class="header-content">
<div class="header-content-inner">
<h1>Change your password</h1>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

<div class="panel translucent">
<div class="panel-body">  

<%= f.input :reset_password_token, as: :hidden %>
<%= f.full_error :reset_password_token %>


  <div class="form-inputs">
    <%= f.input :password, label: "New password", required: true, autofocus: true, input_html: { maxlength: 50, size: 25 }  %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: { maxlength: 50, size: 25 }  %>
  </div>
</div>
</div>
  <button class="btn btn-primary btn-xl" type="submit">Change my password</button>
  <% end %>

<hr>
  <div class="panel translucent">
    <div class="panel-body"> 
      <%= render "devise/shared/links" %>
    </div>
  </div>
