%section.static-header
  %div.container
    %h1
      Eventes Planned per Month
    = render :partial => "weekly_chart", locals: {monthly_array: @monthly_array}
    %h1
      All Events
    .panel.translucent
      .panel-body
        .panel-text
          %table.table.table-center.table-striped.table-responsive{id: 'all-events'}
            %thead
              %tr
                %th.text-center
                  Organizer
                %th.text-center
                  Name
                %th.text-center
                  ID
                %th.text-center
                  Date
                %th.text-center
                  Sipping Point
                %th.text-center
                  Deadline
                %th.text-center
                  Confirmations
                %th.text-center
                  Status
            %tbody
              -@events.each do |event|
                %tr
                  %td
                    -if event.owner 
                      =event.owner.display_name
                    -else
                      Owner Deleted
                  %td
                    =link_to event.name, event_path(event)
                  %td
                    =event.id
                  %td
                    -if event.time
                      =event.display_time
                  %td
                    =event.threshold
                  %td
                    -if event.deadline
                      =event.display_deadline
                  %td
                    =event.rsvps.where(response: true).count
                  %td
                    =event.short_description 

%div.fill-footer
:javascript
  $(document).ready(function() {
    $('#all-events').dataTable();
  } );