%section.static-header
  %div.container
    %h2
      ="New RSVPs"
    .panel.translucent
      .panel-body
        .panel-text
          %table.table.table-center.table-striped
            %tr
              %th.text-center
                Name
              %th.text-center
                Date
              %th.text-center
                Deadline
              %th.text-center
                Respond
              -@new_rsvps.each do |rsvp|
                %tr
                  %td
                    =link_to rsvp.event.name, event_path(rsvp.event)
                  %td
                    -if rsvp.event.time
                      =rsvp.event.time.strftime("%B %-d, %Y at %-I:%M%p")
                  %td
                    -if rsvp.event.deadline
                      =rsvp.event.deadline.strftime("%B %-d, %Y at %-I:%M%p")
                  %td 
                    =link_to 'Click to RSVP', edit_rsvp_url(rsvp), only_path: false                 
    %h2
      ="My Upcoming Events"
    .panel.translucent
      .panel-body
        .panel-text
          %table.table.table-center.table-striped
            %tr
              %th.text-center
                Name
              %th.text-center
                Date
              %th.text-center
                Sipping Point
              %th.text-center
                Deadline
              -@my_upcoming_events.each do |event|
                %tr
                  %td
                    =link_to event.name, event_path(event)
                  %td
                    -if event.time
                      =event.time.strftime("%B %-d, %Y at %-I:%M%p")
                  %td
                    =event.threshold
                  %td
                    -if event.deadline
                      =event.deadline.strftime("%B %-d, %Y at %-I:%M%p")
    %h2
      ="My Prior Events"
    .panel.translucent
      .panel-body
        .panel-text
          %table.table.table-center.table-striped
            %tr
              %th.text-center
                Name
              %th.text-center
                Date
              %th.text-center
                Sipping Point
              %th.text-center
                Deadline
              -@my_prior_events.each do |event|
                %tr
                  %td
                    =link_to event.name, event_path(event)
                  %td
                    -if event.time
                      =event.time.strftime("%B %-d, %Y at %-I:%M%p")
                  %td
                    =event.threshold
                  %td
                    -if event.deadline
                      =event.deadline.strftime("%B %-d, %Y at %-I:%M%p")
