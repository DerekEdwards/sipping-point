

= simple_form_for(@event,:html => {:class => 'form-vertical' }) do |f|

  .panel.translucent
    .panel-body 
      - if @event.errors.any?
        #error_explanation
          %h2
            =pluralize(@event.errors.count, "error").to_s + "prohibited this event from being saved:<"
          %ul
            - @event.errors.full_messages.each do |message| 
              %li 
                =message

      =f.input :name, :label => "Event Name", :placeholder => "Drinks at the Shack", :hint => "What are we doing?", :input_html => {:color => "black", :size => 40, :maxlength => 50}
      =f.input :threshold, :label => "Sipping Point", :hint => "Any fewer than this, and it's just not a party.", :collection => 1..20, :selected => 4
      =f.input :time, :label => "Event Date", :hint => "When is this thing?"
      =f.input :deadline, :label => "RSVP by", :hint => "If you ain't go by now, I reckon you ain't going at all."

  %button.btn.btn-primary.btn-xl{:type => "submit"} Let's do it!
  
